{
  // Use ESLint to fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  // Language-specific overrides
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}

